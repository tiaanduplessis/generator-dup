{
  "name": "<%= moduleName %>",
  "version": "1.0.0",
  "description": "<%= moduleDescription %>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/<%= githubUsername %>/<%= moduleName %>.git"
  },
  "homepage": "https://github.com/<%= githubUsername %>/<%= moduleName %>",
  "bugs": "https://github.com/<%= githubUsername %>/<%= moduleName %>/issues",
  "author": {
    "name": "<%= name %>",
    "email": "<%= email %>",
    "url": "<%= humanizedWebsite %>"
  },
  <% if (cli) { %>
  "bin": "cli.js",
  <% } %>
  "scripts": {
  	"lint": "standard --verbose | snazzy",
    "lint:fix": "standard --fix --verbose | snazzy",
    "test": "standard && mocha",
    "watch": "chokidar '**/*' -c 'npm test'"
  },
  "keywords": [
  <% for(var i=0; i<keywords.length; i++) {%>"<%= keywords[i] %>",<% } %>
  "<%= moduleName %>"
  ],
  "dependencies": {},
  "devDependencies": {
    "chai": "^3.5.0",
    "chokidar-cli": "^1.2.0",
    "mocha": "^3.2.0",
    "snazzy": "^5.0.0",
    "standard": "^8.6.0"
  }
}
